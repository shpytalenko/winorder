<%= form_for @push_event, :html => { :class => "form-horizontal push_event" } do |f| %>

    <% if @push_event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@push_event.errors.count, "error") %> prohibited this push_event from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @push_event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :data, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :data, :class => 'form-control' %>
    </div>
    <%= error_span(@push_event[:data]) %>
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :body, :class => 'form-control' %>
    </div>
    <%= error_span(@push_event[:body]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            push_events_path, :class => 'btn btn-default' %>

<% end %>
